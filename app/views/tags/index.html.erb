<div class="container mx-auto p-6 max-w-4xl">
  <h1 class="text-2xl font-bold mb-6">タグ一覧</h1>
  
  <div class="bg-white rounded-lg shadow-md p-6">
    <% if @tags.empty? %>
      <p class="text-gray-500 text-center">タグはまだありません</p>
    <% else %>
      <div class="flex flex-wrap gap-3">
        <% @tags.each do |tag| %>
          <%= link_to tag_path(tag), class: "group relative" do %>
            <div class="bg-gray-100 hover:bg-gray-200 text-gray-800 rounded-full px-4 py-2 inline-flex items-center transition duration-150">
              <%= tag.name %>
              <span class="ml-2 bg-blue-600 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">
                <%= tag.posts.size %>
              </span>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
  
  <div class="mt-6">
    <%= link_to "投稿一覧に戻る", posts_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>